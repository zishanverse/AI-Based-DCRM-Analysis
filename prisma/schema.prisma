generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}
 
datasource db {
  provider = "postgresql"
}

model Station {
  id          String   @id @default(cuid())
  name        String
  location    String?
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  breakers Breaker[]

  @@map("stations")
}

// Add this new model to your schema

model TestResult {
  id        String   @id @default(cuid())
  breakerId String
  breaker   Breaker  @relation(fields: [breakerId], references: [id], onDelete: Cascade)
  
  // Test metadata
  testDate     DateTime @default(now())
  testType     String   @default("DCRM") // Type of test performed
  operator     String?  // Who performed the test
  notes        String?  // Any additional notes
  
  // File information
  fileName     String
  fileUrl      String?  // If you want to store the original file
  
  // Reference data info
  referenceFileName String?
  referenceFileUrl  String?
  
  // Complete test data stored as JSON
  testData     Json     // Stores the entire parsed data
  
  // Key metrics for quick querying (denormalized for performance)
  travelT1Max  Float?
  velocityT1Max Float?
  resistanceCH1Avg Float?
  
  // Pass/Fail status
  status       String   @default("COMPLETED") // COMPLETED, FAILED, etc.
  
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("test_results")
  @@index([breakerId, testDate])
}

// Update the Breaker model to include the relation
model Breaker {
  id           String   @id @default(cuid())
  name         String
  type         String
  manufacturer String
  model        String?
  voltage      Float?
  current      Float?
  status       String?
  installationDate DateTime?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  stationId    String
  station      Station  @relation(fields: [stationId], references: [id], onDelete: Cascade)
  components   BreakerComponent[]
  
  dataSourceId String?
  dataSource   DataSource? @relation(fields: [dataSourceId], references: [id], onDelete: SetNull)
  
  // NEW: Relation to test results
  testResults  TestResult[]

  @@map("breakers")
}

model BreakerComponent {
  id          String   @id @default(cuid())
  name        String
  type        String   // e.g., "Contact", "Coil", "Trip Unit", etc.
  description String?
  partNumber  String?
  status      String?  // e.g., "Good", "Worn", "Needs Replacement"
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  breakerId   String
  breaker     Breaker  @relation(fields: [breakerId], references: [id], onDelete: Cascade)

  @@map("breaker_components")
}

// --- UPDATED MODEL ---
model DataSource {
  id          String   @id @default(cuid())
  fileName    String   // Original name of the file, e.g., "station_data_v1.csv"
  fileUrl     String   @unique // The URL or path to the CSV file
  description String?  // Optional description of the data source
  status      String   @default("PENDING") // e.g., PENDING, PROCESSING, COMPLETED, FAILED
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // --- NEW RELATION ---
  // One DataSource can have many Breakers
  breakers Breaker[]

  @@map("data_sources")
}